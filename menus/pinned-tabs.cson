# Add a pin/unpin option to the context menu of tabs.
'context-menu':
    '.tab:not(.pinned)': [{
            'label': 'Pin tab'
            'command': 'pinned-tabs:pin-selected'
        }]
    '.tab.pinned': [{
            'label': 'Unpin tab'
            'command': 'pinned-tabs:pin-selected'
        }]

# This is the menu within the Packages menu, pinned-tabs
# uses this for configuration of the package.
'menu': [{
    'label': 'Packages'
    'submenu': [
        'label': 'pinned-tabs'
        'submenu': [{
            'label': 'This is not the context-menu you\'re looking for...'
        }]
    ]
}]
